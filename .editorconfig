# EditorConfig is awesome!
# https://editorconfig.org

# top-most config
root = true

# overall config
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_size = 8
indent_style = tab

[*.go]
indent_size = 4
indent_style = tab

[*.{json,tf,tfvars,yaml,yml}]
indent_size = 2
